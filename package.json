{
  "name": "project-flow",
  "version": "1.0.0",
  "private": true,
  "description": "Piattaforma di gestione progetti e attivitÃ ",
  "author": "Your Name",
  "homepage": "./",
  "main": "electron/main.js",
  "scripts": {
    "react-start": "set PORT=5000 && react-scripts start",
    "react-build": "react-scripts build",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:5000 && electron .\"",
    "build": "npm run react-build && electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@fullcalendar/core": "^5.11.3",
    "@fullcalendar/daygrid": "^5.11.3",
    "@fullcalendar/interaction": "^5.11.3",
    "@fullcalendar/list": "^5.11.3",
    "@fullcalendar/react": "^5.11.2",
    "@fullcalendar/timegrid": "^5.11.3",
    "@mui/icons-material": "^5.10.3",
    "@mui/material": "^5.10.5",
    "@mui/x-data-grid": "^5.17.2",
    "@mui/x-date-pickers": "^6.19.3",
    "@nivo/bar": "^0.80.0",
    "@nivo/core": "^0.79.0",
    "@nivo/geo": "^0.80.0",
    "@nivo/line": "^0.79.1",
    "@nivo/pie": "^0.80.0",
    "@reduxjs/toolkit": "^1.8.5",
    "axios": "^1.6.7",
    "chart.js": "^3.9.1",
    "date-fns": "^2.30.0",
    "formik": "^2.2.9",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-chartjs-2": "^4.3.1",
    "react-dom": "^18.2.0",
    "react-pro-sidebar": "^0.7.1",
    "react-quill": "^2.0.0",
    "react-redux": "^8.0.2",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^24.6.0",
    "electron-builder": "^26.0.12",
    "install": "^0.13.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.yourcompany.projectflow",
    "productName": "ProjectFlow",
    "directories": {
      "buildResources": "public"
    },
    "files": [
      "build/**/*",
      "electron/**/*"
    ],
    "win": {
      "icon": "public/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "icon": "public/icon.icns",
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "icon": "public/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}